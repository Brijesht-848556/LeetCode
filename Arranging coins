class Solution {
    public int arrangeCoins(int n) {
        if(n==0)
            return 0;
        int a=n;
        int c=1;
        int ans=0;
        while(true)
        {
          if(a-c>=0)
          { a=a-c;
           c++;
           ans++;
          } 
            else
                return ans;
        }
        
    }
}
